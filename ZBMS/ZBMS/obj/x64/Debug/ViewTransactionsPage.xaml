                        <Setter Target="AmountValueTextBlock.Style" Value="{StaticResource WideBoldTextBlock}"/>
                        <Setter Target="SenderIdTextBlock.Style" Value="{StaticResource WideBoldTextBlock}"/>
                        <Setter Target="SenderIdValueTextBlock.Style" Value="{StaticResource WideTextBlock}"/>
                        <Setter Target="ReceiverIdTextBlock.Style" Value="{StaticResource WideBoldTextBlock}"/>
