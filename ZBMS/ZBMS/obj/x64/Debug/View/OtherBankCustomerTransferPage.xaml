<Page x:ConnectionId='1'
    x:Class="ZBMS.OtherBankCustomerTransferPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ZBMS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Resource/ZBankResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer x:ConnectionId='2'
        Margin="20"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto"
                                              >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel x:ConnectionId='3'
                Name="PageTitlePanel"
                Margin="10,10,0,0"
                CornerRadius="10">
                <StackPanel.Background>
                    <LinearGradientBrush StartPoint="0,0.85" EndPoint="1,0.85">
                        <GradientStop Offset="0.97" Color="Transparent" />
                        <GradientStop Offset="0.85" Color="{Binding Color, Source={StaticResource ZBMSAccentColorBrushLight2}}" />
                    </LinearGradientBrush>
                </StackPanel.Background>

                <TextBlock
                    Margin="20,15"
                    VerticalAlignment="Center"
                    FontSize="32"
                    FontWeight="Bold"
                    Text="Other Bank Transfer Page" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <Grid x:ConnectionId='4'
                    Name="ContentGrid"
                    Width="350"
                    Height="600"
                    Background="{ThemeResource PrimaryBackground}"
                    CornerRadius="15">



                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="50" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <!--<TextBlock  Name="TitleTextBlock"  Text="Other Bank Transfer"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="ExtraBold" FontSize="16" Margin="10" ></TextBlock>-->

                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                        <TextBlock x:ConnectionId='14'
                            Name="FromTextBox"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="From :" />
                        <ComboBox x:ConnectionId='15'
                            Name="FromComboBox"
                            Width="200"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="White"
                            FontSize="12"
                                                                   
                            PlaceholderText="Select an Account"
                            Style="{StaticResource NarrowStyleComboBox}" />
                    </StackPanel>


                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBlock x:ConnectionId='12'
                            Name="ToTextBlock"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="To :" />
                        <TextBox x:ConnectionId='13'
                            Name="ToTextBox"
                            PlaceholderText="Enter receiver acc number"
                            Style="{StaticResource NarrowStyleTextBox}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBlock x:ConnectionId='10'
                            Name="AmountTextBlock"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Amount:" />
                        <TextBox x:ConnectionId='11'
                            Name="AmountTextBox"
                            PlaceholderText="Enter amount"
                            Style="{StaticResource NarrowStyleTextBox}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBlock x:ConnectionId='8'
                            Name="RemarksTextBlock"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Remarks :" />

                        <TextBox x:ConnectionId='9'
                            Name="RemarksTextBox"
                            PlaceholderText="Short message"
                            Style="{StaticResource NarrowStyleTextBox}" />
                    </StackPanel>

                    <TextBlock x:ConnectionId='5'
                        Name="ErrorBox"
                        Grid.Row="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="Red" />

                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />

                        </Grid.ColumnDefinitions>

                        <Button x:ConnectionId='6'
                            Name="TransferButton"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                                                        
                            Content="Transfer"
                            FontSize="16"
                            Style="{StaticResource PrimaryButtonStyle}" />
                        <Button x:ConnectionId='7'
                            Name="CancelButton"
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                                                      
                            Content="Cancel"
                            FontSize="16"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    </Grid>

                </Grid>
            </StackPanel>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="FromComboBox.FontSize" Value="16" />
                        <Setter Target="ToTextBlock.FontSize" Value="16" />
                        <Setter Target="FromTextBox.FontSize" Value="16" />
                        <Setter Target="AmountTextBlock.FontSize" Value="16" />
                        <Setter Target="RemarksTextBlock.FontSize" Value="16" />
                        <Setter Target="TransferButton.FontSize" Value="16" />
                        <Setter Target="CancelButton.FontSize" Value="16" />
                        <Setter Target="ContentGrid.Width" Value="400" />
                        <!--<Setter Target="TitleTextBlock.FontSize" Value="20"/>-->

                        <Setter Target="ToTextBox.Style" Value="{StaticResource WideStyleTextBox}" />
                        <Setter Target="AmountTextBox.Style" Value="{StaticResource WideStyleTextBox}" />
                        <Setter Target="RemarksTextBox.Style" Value="{StaticResource WideStyleTextBox}" />

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </ScrollViewer>
</Page>

