<Page x:ConnectionId='1'
    x:Class="ZBMS.ViewTransactionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:ZBMS.Models"
    xmlns:local="using:ZBMS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Resource/ZBankResource.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="NarrowTextBlock" TargetType="TextBlock">
                <Setter Property="Margin" Value="3" />
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style x:Key="WideTextBlock" TargetType="TextBlock">
                <Setter Property="Margin" Value="5" />
                <Setter Property="FontSize" Value="16" />
            </Style>

            <Style x:Key="NarrowBoldTextBlock" TargetType="TextBlock">
                <Setter Property="Margin" Value="3" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="WideBoldTextBlock" TargetType="TextBlock">
                <Setter Property="Margin" Value="5" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="TransactionDetailsStackPanelStyle" TargetType="StackPanel">
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="BorderBrush" Value="{ThemeResource BorderColor}" />
                <Setter Property="BorderThickness" Value="0,0,0,1" />
            </Style>

            <Style x:Key="TransactionDetailsBoldTextBlockStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="30,10" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <Style x:Key="TransactionDetailsTextBlockStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="Padding" Value="30,10" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style
                x:Key="NarrowButton"
                BasedOn="{StaticResource NarrowStyleButton}"
                TargetType="Button">
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Padding" Value="5" />
                <!--<Setter Property="BorderBrush" Value="LightGreen" />-->
            </Style>

        </ResourceDictionary>

    </Page.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--<RowDefinition Height="Auto" />-->
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle Grid.RowSpan="3" Fill="{ThemeResource AcrylicBrush2}" />
        <Rectangle
            Grid.RowSpan="3"
            Fill="{ThemeResource GridBackGroundColor}"
            Opacity="0.5" />

        <StackPanel x:ConnectionId='2'
            Name="PageTitlePanel"
            Margin="10,10,0,0"
            CornerRadius="10">
            <StackPanel.Background>
                <LinearGradientBrush StartPoint="0,0.85" EndPoint="1,0.85">
                    <GradientStop Offset="0.97" Color="Transparent" />
                    <GradientStop Offset="0.85" Color="{Binding Color, Source={StaticResource ZBMSAccentColorBrushLight2}}" />
                </LinearGradientBrush>
            </StackPanel.Background>

            <TextBlock
                Margin="20,15"
                VerticalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Foreground="Black"
                Text="Transactions Page" />
        </StackPanel>

        <Grid x:ConnectionId='3'
            Name="ContentGrid"
            Grid.Row="1"
            Margin="10,10,10,10"
            Background="{ThemeResource GridBackGroundColor}"
            CornerRadius="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock x:ConnectionId='4'
                Name="ErrorMessage"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="32"
                FontWeight="Bold"
                Text="No Transactions Available"
                Visibility="Collapsed" />

            <RelativePanel
                Grid.Row="0"
                Margin="10"
                Background="{ThemeResource GridBackGroundColor}"
                CornerRadius="10">
                <Button x:ConnectionId='59'
                    Name="ChangeViewButton"
                    Margin="10"
                    Padding="5"
                                                  
                    Content="Change View"
                    FontSize="16"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Style="{StaticResource NarrowButton}" />

            </RelativePanel>

            <Grid x:ConnectionId='5'
                Name="TransactionsListViewGrid"
                Grid.Row="1"
                Background="Transparent">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ScrollViewer
                    Margin="5"
                    HorizontalScrollBarVisibility="Auto"
                    HorizontalScrollMode="Auto">
                    <ListView x:ConnectionId='46'
                        Name="TransactionList"
                        Margin="10"
                        Background="{ThemeResource GridBackGroundColor}"
                        IsItemClickEnabled="True"
                                                                         
                                                                           
                        SelectionMode="Single">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ListViewItemPresenter
                                                CornerRadius="10"
                                                PointerOverBackground="LightGray"
                                                PressedBackground="LightGray"
                                                SelectedBackground="DarkGray"
                                                SelectedPointerOverBackground="DarkGray"
                                                SelectedPressedBackground="DarkGray" />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate                                             >

                                <Grid x:ConnectionId='50'
                                    Name="TransactionListViewGrid"
                                    MinWidth="600"
                                    Margin="5"
                                    CornerRadius="10">

                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <TextBlock x:ConnectionId='57'
                                            Margin="10"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                                                         />
                                        <TextBlock x:ConnectionId='58'
                                            Margin="10"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                                                         />

                                    </StackPanel>

                                    <StackPanel
                                        Grid.Column="2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock x:ConnectionId='55'
                                            Margin="10"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                                                         />

                                        <TextBlock x:ConnectionId='56'
                                            Margin="10,15,10,10"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="14"
                                                                           
                                                                       />

                                    </StackPanel>

                                    <StackPanel
                                        Name="SenderDetailsPanel"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="10"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Horizontal"
                                        RelativePanel.AlignLeftWithPanel="True">
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="10"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Text="Sender Acc no:" />
                                        <TextBlock x:ConnectionId='54'
                                            Grid.Row="1"
                                            Margin="10"
                                            FontSize="14"
                                                                                />
                                    </StackPanel>

                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="10"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="10"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Text="Receiver Acc no:" />
                                        <TextBlock x:ConnectionId='53'
                                            Grid.Row="1"
                                            Margin="10"
                                            FontSize="14"
                                                                                  />
                                    </StackPanel>

                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Margin="10,10,10,10"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="10"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Text="Ref no:" />
                                        <TextBlock x:ConnectionId='52'
                                            Margin="10"
                                            FontSize="14"
                                                                          />
                                    </StackPanel>
                                </Grid>

                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
                </ScrollViewer>


                <Button x:ConnectionId='34'
                    Name="DetailedTransactionsCloseButton"
                    Grid.Column="1"
                    Margin="0,10,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    Canvas.ZIndex="5"
                                             
                    Content="&#xE10A;"
                    FontFamily="Segoe MDL2 Assets"
                    FontWeight="Bold"
                    Style="{StaticResource ExitButtonStyle}" />


                <ScrollViewer x:ConnectionId='35'
                    Name="DetailedTransactionGrid"
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    Canvas.ZIndex="1"
                    Visibility="Collapsed">

                    <Grid
                        Width="350"
                        Height="700"
                        Margin="10"
                        Background="{ThemeResource GridBackGroundColor}"
                        BorderBrush="{ThemeResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="10">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Transactions Details" />


                        <RelativePanel
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            BorderBrush="{ThemeResource BorderColor}"
                            BorderThickness="0,0,0,1">

                            <TextBlock x:ConnectionId='44'
                                Name="DateTextBlock"
                                Margin="20,10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RelativePanel.AlignLeftWithPanel="True"
                                RelativePanel.AlignVerticalCenterWithPanel="True"
                                Text="Date" />
                            <TextBlock x:ConnectionId='45'
                                Name="TimeTextBlock"
                                Margin="40,10"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                RelativePanel.AlignRightWithPanel="True"
                                RelativePanel.AlignVerticalCenterWithPanel="True"
                                Text="Time" />
                        </RelativePanel>

                        <!--<StackPanel Grid.Row="2" Style="{StaticResource TransactionDetailsStackPanelStyle}">-->
                        <TextBlock
                            Grid.Row="2"
                            Style="{StaticResource TransactionDetailsBoldTextBlockStyle}"
                            Text="Sent By" />
                        <TextBlock x:ConnectionId='36'
                            Name="SenderNameTextBlock"
                            Grid.Row="2"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalTextAlignment="Left"
                            Style="{StaticResource TransactionDetailsTextBlockStyle}"
                            Text="" />
                        <!--</StackPanel>-->

                        <!--<StackPanel Grid.Row="3" Style="{StaticResource TransactionDetailsStackPanelStyle}">-->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            FontWeight="SemiBold"
                            Style="{StaticResource TransactionDetailsBoldTextBlockStyle}"
                            Text="Received By" />

                        <TextBlock x:ConnectionId='37'
                            Name="ReceiverNameTextBlock"
                            Grid.Row="3"
                            Grid.Column="1"
                            Style="{StaticResource TransactionDetailsTextBlockStyle}"
                            Text="" />
                        <!--</StackPanel>-->

                        <!--<StackPanel Grid.Row="4" Style="{StaticResource TransactionDetailsStackPanelStyle}">-->
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            FontWeight="SemiBold"
                            Style="{StaticResource TransactionDetailsBoldTextBlockStyle}"
                            Text="Amount" />


                        <StackPanel
                            Grid.Row="4"
                            Grid.Column="1"
                            Orientation="Horizontal">

                            <TextBlock x:ConnectionId='42'
                                Name="TransactionAmountTextBlock"
                                Grid.Row="4"
                                Grid.Column="1"
                                Padding="30,5,15,5"
                                Style="{StaticResource TransactionDetailsTextBlockStyle}"
                                Text="" />

                            <TextBlock x:ConnectionId='43'
                                Name="AmountIconTextBlock"
                                Grid.Row="6"
                                Grid.Column="1"
                                Padding="5"
                                FontFamily="Segoe MDL2 Assets"
                                Style="{StaticResource TransactionDetailsTextBlockStyle}"
                                Text="" />
                        </StackPanel>

                        <!--</StackPanel>-->

                        <!--<StackPanel Grid.Row="5" Style="{StaticResource TransactionDetailsStackPanelStyle}">-->
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            FontWeight="SemiBold"
                            Style="{StaticResource TransactionDetailsBoldTextBlockStyle}"
                            Text="Status" />
                        <TextBlock x:ConnectionId='38'
                            Name="TransactionStatusTextBlock"
                            Grid.Row="5"
                            Grid.Column="1"
                            Style="{StaticResource TransactionDetailsTextBlockStyle}"
                            Text="" />
                        <!--</StackPanel>-->

                        <!--<StackPanel Grid.Row="6" Style="{StaticResource TransactionDetailsStackPanelStyle}">-->
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            FontWeight="SemiBold"
                            Style="{StaticResource TransactionDetailsBoldTextBlockStyle}"
                            Text="Balance" />
                        <TextBlock x:ConnectionId='39'
                            Name="BalanceTextBlock"
                            Grid.Row="6"
                            Grid.Column="1"
                            Style="{StaticResource TransactionDetailsTextBlockStyle}"
                            Text="-" />
                        <!--</StackPanel>-->


                        <!--<StackPanel Grid.Row="7" Style="{StaticResource TransactionDetailsStackPanelStyle}">-->
                        <TextBlock
                            Grid.Row="7"
                            HorizontalAlignment="Left"
                            FontWeight="SemiBold"
                            Style="{StaticResource TransactionDetailsBoldTextBlockStyle}"
                            Text="Ref no " />
                        <TextBlock x:ConnectionId='40'
                            Name="TransactionIdTextBlock"
                            Grid.Row="7"
                            Grid.Column="1"
                            Style="{StaticResource TransactionDetailsTextBlockStyle}"
                            Text="" />
                        <!--</StackPanel>-->

                        <!--<StackPanel
                            Grid.Row="8"
                            BorderThickness="0"
                            Style="{StaticResource TransactionDetailsStackPanelStyle}">-->
                        <TextBlock
                            Grid.Row="8"
                            HorizontalAlignment="Left"
                            FontWeight="SemiBold"
                            Style="{StaticResource TransactionDetailsBoldTextBlockStyle}"
                            Text="Remarks" />
                        <TextBlock x:ConnectionId='41'
                            Name="RemarksTextBlock"
                            Grid.Row="8"
                            Grid.Column="1"
                            Style="{StaticResource TransactionDetailsTextBlockStyle}"
                            Text="-" />
                        <!--</StackPanel>-->

                    </Grid>
                </ScrollViewer>

            </Grid>

            <GridView x:ConnectionId='6'
                Name="TransactionsGridView"
                Grid.Row="1"
                Margin="10"
                Background="{ThemeResource GridBackGroundColor}"
                CornerRadius="10"
                IsItemClickEnabled="True"
                                                                 
                                                                        
                SelectionMode="Single"
                Visibility="Collapsed">

                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:StaggeredPanel />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemTemplate>
                    <DataTemplate                                             >

                        <Grid x:ConnectionId='8'
                            Name="TransactionsGrid"
                            Width="270"
                            Height="150"
                            Margin="0,5"
                            Background="{ThemeResource GridBackGroundColor}"
                            BorderBrush="{ThemeResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="10"
                                                                                         
                                                                                       >

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock x:ConnectionId='9'
                                Name="DateTextBlock"
                                Grid.Row="1"
                                Style="{StaticResource NarrowTextBlock}"
                                                             />
                            <TextBlock x:ConnectionId='10'
                                Name="TimeTextBlock"
                                Grid.Row="1"
                                Grid.Column="1"
                                Style="{StaticResource NarrowTextBlock}"
                                                             />
                            <Button x:ConnectionId='11'
                                Name="TransactionGridCloseButton"
                                Grid.Column="1"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                Canvas.ZIndex="5"
                                                                        
                                Content="&#xE10A;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="10"
                                Foreground="{ThemeResource BorderColor}"
                                Style="{StaticResource ExitButtonStyle}"
                                Visibility="Collapsed" />


                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                                <TextBlock x:ConnectionId='30'
                                    Name="AmountValueTextBlock"
                                    Margin="5"
                                    FontSize="14"
                                    Style="{StaticResource NarrowBoldTextBlock}"
                                                                 />

                                <TextBlock x:ConnectionId='31'
                                    Margin="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="16"
                                                                   
                                                               />
                            </StackPanel>

                            <StackPanel
                                Name="ContentStackPanel"
                                Grid.Row="2"
                                Margin="5,15,5,5"
                                VerticalAlignment="Top"
                                Orientation="Vertical">

                                <StackPanel Name="NormalSenderDetails" Orientation="Horizontal">
                                    <TextBlock
                                        Name="SenderIdTextBlock"
                                        Style="{StaticResource NarrowBoldTextBlock}"
                                        Text="Sender Acc no:" />

                                    <TextBlock x:ConnectionId='29'
                                        Name="SenderIdValueTextBlock"
                                        Style="{StaticResource NarrowTextBlock}"
                                                                            />

                                </StackPanel>

                                <StackPanel Name="ExpandedSenderDetails" Visibility="Collapsed">
                                    <TextBlock
                                        Name="SenderNameTextBlock"
                                        Style="{StaticResource NarrowBoldTextBlock}"
                                        Text="Sent By:" />

                                    <TextBlock x:ConnectionId='27'
                                        Name="SenderNameValueTextBlock"
                                        Style="{StaticResource NarrowTextBlock}"
                                                                   />

                                </StackPanel>

                                <StackPanel Name="ExpandedReceiverDetails" Visibility="Collapsed">
                                    <TextBlock
                                        Name="ReceiverNameTextBlock"
                                        Style="{StaticResource NarrowBoldTextBlock}"
                                        Text="Received By:" />

                                    <TextBlock x:ConnectionId='25'
                                        Name="ReceiverNameValueTextBlock"
                                        Style="{StaticResource NarrowTextBlock}"
                                                                     />

                                </StackPanel>

                                <StackPanel Name="NormalReceiverDetails" Orientation="Horizontal">
                                    <TextBlock
                                        Name="ReceiverIdTextBlock"
                                        Style="{StaticResource NarrowBoldTextBlock}"
                                        Text="Receiver acc no:" />

                                    <TextBlock x:ConnectionId='23'
                                        Name="ReceiverIdValueTextBlock"
                                        Style="{StaticResource NarrowTextBlock}"
                                                                              />

                                </StackPanel>

                                <StackPanel Name="StatusDetails" Visibility="Collapsed">
                                    <TextBlock
                                        Name="StatusTextBlock"
                                        Style="{StaticResource NarrowBoldTextBlock}"
                                        Text="Transaction Type:" />

                                    <TextBlock x:ConnectionId='21'
                                        Name="StatusValueTextBlock"
                                        Style="{StaticResource NarrowTextBlock}"
                                                               />

                                </StackPanel>


                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Name="TransactionIdTextBlock"
                                        Margin="5,20,5,5"
                                        Style="{StaticResource NarrowBoldTextBlock}"
                                        Text="Ref no:" />

                                    <TextBlock x:ConnectionId='19'
                                        Name="TransactionIdValueTextBlock"
                                        Margin="5,20,5,5"
                                        Style="{StaticResource NarrowTextBlock}"
                                                                      />
                                </StackPanel>

                            </StackPanel>

                        </Grid>

                    </DataTemplate>
                </GridView.ItemTemplate>

                <GridView.ItemContainerStyle>

                    <Style TargetType="GridViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridViewItem">
                                    <ListViewItemPresenter
                                        PointerOverBackground="Transparent"
                                        PressedBackground="Transparent"
                                        SelectedBackground="Transparent"
                                        SelectedPointerOverBackground="Transparent"
                                        SelectedPressedBackground="Transparent" />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                </GridView.ItemContainerStyle>

            </GridView>


        </Grid>


        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='60'                                                           >

                <VisualState x:ConnectionId='61' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1350" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="DetailedTransactionGrid.Visibility" Value="Visible" />
                        <Setter Target="DetailedTransactionsCloseButton.Visibility" Value="Visible" />
                    </VisualState.Setters>

                </VisualState>

                <VisualState x:ConnectionId='62' x:Name="NarrowState">

                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="DetailedTransactionGrid.Visibility" Value="Collapsed" />
                        <Setter Target="DetailedTransactionsCloseButton.Visibility" Value="Collapsed" />
                    </VisualState.Setters>


                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>

