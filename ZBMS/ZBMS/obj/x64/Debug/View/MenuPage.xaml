<Page
    x:Class="ZBMS.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ZBMS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Resource/ZBankResource.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="MenuButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="5" />
                <Setter Property="Background" Value="Transparent" />
            </Style>

            <Style x:Key="NarrowListText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="20,0,10,0" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style
                x:Key="IconStyle"
                BasedOn="{StaticResource IconStyleSample}"
                TargetType="Button">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <Style x:Key="NarrowMenuText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="0,0,0,0" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>


            <Style x:Key="ButtonTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black" />
            </Style>

        </ResourceDictionary>

    </Page.Resources>


    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Rectangle Grid.ColumnSpan="2" Fill="{ThemeResource AcrylicBrush2}" />
        <Rectangle
            Grid.ColumnSpan="2"
            Fill="{ThemeResource GridBackGroundColor}"
            Opacity="0.5" />

        <Grid x:ConnectionId='2' Name="MenuGrid" Width="250">
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Image x:ConnectionId='5'
                Name="LogoImage"
                Grid.Row="0"
                Width="180"
                Height="60"
                RelativePanel.AlignTopWithPanel="True"
                Source="ms-appx:///Assets/zb1.png" />

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />

                    </Grid.RowDefinitions>
                    <!--
                        E825 Bank,  E71C Filter, E8AB Switch , E8d4 Profile , E910 Accounts , E946 info, E9BB Dolar , EA4A Profile ,EC25 personal folder (accounts) ,
                        EF58 account settings , E971 Up arrow , E972 down arrow , E935 flick up ,E936 Flick down , E779 contact info , E77B contact
                    -->
                    <StackPanel>
                        <ListView x:ConnectionId='16'
                            Name="MenuOptionsListView"
                            Margin="10"
                                                                                   >

                            <ListViewItem x:ConnectionId='17' Name="Dashboard">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="8"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontWeight="Bold"
                                        Text="&#xE10F;" />
                                    <TextBlock
                                        Margin="5"
                                        FontSize="16"
                                        Text="Dashboard" />

                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem x:ConnectionId='18' Name="MoneyTransfer">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Margin="10,8"
                                            HorizontalAlignment="Center"
                                            FontFamily="Arial"
                                            Text="&#x20B9;" />

                                        <TextBlock
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            Margin="5"
                                            FontSize="16"
                                            Text="Money Transfer" />

                                        <TextBlock x:ConnectionId='47'
                                            Name="Downarrow1"
                                            Grid.Column="3"
                                            Margin="10"
                                            FontFamily="Segoe MDL2 Assets"
                                            Text="&#xE971;" />

                                    </Grid>

                                    <ListView x:ConnectionId='38'
                                        Name="MoneyTransferList"
                                        Margin="30,0,0,10"
                                        Background="Transparent"
                                                                                             
                                        SelectionMode="Single">

                                        <ListViewItem x:ConnectionId='39' Name="SelfTransfer">
                                            <TextBlock x:ConnectionId='44'
                                                Name="SelfTransferTextBlock"
                                                Style="{StaticResource NarrowListText}"
                                                Text="Self" />
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='40' Name="OtherCustomer">
                                            <TextBlock x:ConnectionId='43'
                                                Name="OtherCustomerTransferTextBlock"
                                                Style="{StaticResource NarrowListText}"
                                                Text="Other Customer " />
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='41' Name="OtherBank">
                                            <TextBlock x:ConnectionId='42'
                                                Name="OtherBankTransferTextBlock"
                                                Style="{StaticResource NarrowListText}"
                                                Text="Other Bank" />
                                        </ListViewItem>
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <ListViewItemPresenter
                                                                CornerRadius="10"
                                                                PointerOverBackground="LightGray"
                                                                PressedBackground="Green"
                                                                SelectedPointerOverBackground="LightGreen"
                                                                SelectedPressedBackground="Green" />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.ItemContainerStyle>

                                    </ListView>
                                </StackPanel>

                            </ListViewItem>


                            <ListViewItem x:ConnectionId='19' Name="Accounts">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="10,8"
                                            HorizontalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            Text="&#xEC25;" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            Margin="5"
                                            FontSize="16"
                                            Text="Accounts" />
                                        <TextBlock x:ConnectionId='37'
                                            Name="Downarrow2"
                                            Grid.Column="3"
                                            Margin="10"
                                            FontFamily="Segoe MDL2 Assets"
                                            Text="&#xE971;" />

                                    </Grid>

                                    <ListView x:ConnectionId='30'
                                        Name="AccountsList"
                                        Margin="30,0,0,10"
                                        Background="Transparent"
                                                                                        
                                        SelectionMode="Single">

                                        <ListViewItem x:ConnectionId='31' Name="ViewAccount">
                                            <TextBlock x:ConnectionId='34'
                                                Name="ViewAccountTextBlock"
                                                Style="{StaticResource NarrowListText}"
                                                Text="View Account Details" />
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='32' Name="ViewTransaction">
                                            <TextBlock x:ConnectionId='33'
                                                Name="ViewTransactionTextBlock"
                                                Style="{StaticResource NarrowListText}"
                                                Text="View Transaction " />
                                        </ListViewItem>
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <ListViewItemPresenter
                                                                CornerRadius="10"
                                                                PointerOverBackground="LightGray"
                                                                PressedBackground="Green"
                                                                SelectedPointerOverBackground="LightGreen"
                                                                SelectedPressedBackground="Green" />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.ItemContainerStyle>

                                    </ListView>

                                </StackPanel>
                            </ListViewItem>


                            <ListViewItem x:ConnectionId='20' Name="Profile">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Margin="10"
                                            HorizontalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            Text="&#xEA4A;" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            Margin="5"
                                            FontSize="16"
                                            Text="Profile" />
                                        <TextBlock x:ConnectionId='29'
                                            Name="Downarrow3"
                                            Grid.Column="3"
                                            Margin="10"
                                            FontFamily="Segoe MDL2 Assets"
                                            Text="&#xE971;" />
                                    </Grid>

                                    <ListView x:ConnectionId='22'
                                        Name="ProfileList"
                                        Margin="30,0,0,0"
                                        Background="Transparent"
                                                                                       
                                        SelectionMode="Single">

                                        <ListViewItem x:ConnectionId='23' Name="ViewProfile">
                                            <TextBlock x:ConnectionId='26'
                                                Name="ViewProfileTextBlock"
                                                Style="{StaticResource NarrowListText}"
                                                Text="View Profile" />
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='24' Name="EditProfile">
                                            <TextBlock x:ConnectionId='25'
                                                Name="EditProfileTextBlock"
                                                Style="{StaticResource NarrowListText}"
                                                Text="Edit Profile" />
                                        </ListViewItem>
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <ListViewItemPresenter
                                                                CornerRadius="10"
                                                                PointerOverBackground="LightGray"
                                                                PressedBackground="Green"
                                                                SelectedPointerOverBackground="LightGreen"
                                                                SelectedPressedBackground="Green" />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>

                                </StackPanel>

                            </ListViewItem>

                            <ListViewItem x:ConnectionId='21' Name="Transactions">

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="10"
                                        FontFamily="Segoe MDL2 Assets"
                                        Text="&#xE8AB;" />
                                    <TextBlock
                                        Margin="5"
                                        FontSize="16"
                                        Text="Transactions" />

                                </StackPanel>
                            </ListViewItem>

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ListViewItemPresenter
                                                    CornerRadius="10"
                                                    PointerOverBackground="Transparent"
                                                    PressedBackground="Transparent"
                                                    SelectedBackground="Transparent"
                                                    SelectedForeground="Green"
                                                    SelectedPointerOverBackground="Transparent"
                                                    SelectedPressedBackground="Transparent" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>

                        </ListView>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">

                        <Button x:ConnectionId='6'
                            Name="SettingsButton"
                            Margin="10"
                            Padding="5"
                                                        
                            Content="&#xE713;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Style="{ThemeResource IconStyle}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="Settings" Placement="Top" />
                            </ToolTipService.ToolTip>

                            <Button.Flyout>
                                <Flyout x:ConnectionId='10' x:Name="SettingsButtonFlyout">
                                    <ListView x:ConnectionId='11'
                                        Name="ColorsListView"
                                        IsItemClickEnabled="True"
                                                                            
                                        SelectionMode="Single">

                                        <ListViewItem x:ConnectionId='12' Name="Red">
                                            <StackPanel Orientation="Horizontal">

                                                <Ellipse
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5"
                                                    Fill="Red" />
                                                <TextBlock
                                                    Margin="5"
                                                    HorizontalAlignment="Right"
                                                    Text="Red" />
                                            </StackPanel>
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='13' Name="Green">
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5"
                                                    Fill="Green" />
                                                <TextBlock
                                                    Margin="5"
                                                    HorizontalAlignment="Right"
                                                    Text="Green" />
                                            </StackPanel>
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='14' Name="Blue">
                                            <StackPanel Orientation="Horizontal">

                                                <Ellipse
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5"
                                                    Fill="Blue" />
                                                <TextBlock
                                                    Margin="5"
                                                    HorizontalAlignment="Right"
                                                    Text="Blue" />
                                            </StackPanel>
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='15' Name="Pink">
                                            <StackPanel Orientation="Horizontal">

                                                <Ellipse
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5"
                                                    Fill="HotPink" />
                                                <TextBlock
                                                    Margin="5"
                                                    HorizontalAlignment="Right"
                                                    Text="Pink" />
                                            </StackPanel>
                                        </ListViewItem>

                                    </ListView>
                                </Flyout>
                            </Button.Flyout>

                        </Button>

                        <Button x:ConnectionId='7'
                            Name="InfoButton"
                            Margin="10"
                            Padding="5"
                                                    
                            Content="&#xE946;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Style="{StaticResource IconStyle}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="About Us" Placement="Top" />
                            </ToolTipService.ToolTip>
                        </Button>

                        <Button x:ConnectionId='8'
                            Name="LogoutButton"
                            Margin="10"
                            Padding="5"
                                                      
                            Content="&#xF3B1;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Style="{StaticResource ExitButtonStyle}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="Logout" Placement="Top" />
                            </ToolTipService.ToolTip>
                        </Button>

                        <Button x:ConnectionId='9'
                            Name="ThemeButton"
                            Margin="10"
                            Padding="5"
                                                     
                            Content="&#xE706;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Style="{StaticResource IconStyle}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="Theme" Placement="Top" />
                            </ToolTipService.ToolTip>
                        </Button>

                    </StackPanel>

                </Grid>

            </ScrollViewer>


        </Grid>

        <Frame x:ConnectionId='3' Name="ContentFrame" Grid.Column="1" />
        <Frame x:ConnectionId='4' Name="FullFrame" Grid.ColumnSpan="2" />
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>

                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MenuGrid.Width" Value="250" />
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>

