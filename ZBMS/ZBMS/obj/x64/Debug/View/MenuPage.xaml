<Page
    x:Class="ZBMS.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ZBMS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Resource/ZBankResource.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--<SolidColorBrush x:Key="Brush1" Color="Green"  />-->

            <Style x:Key="MenuButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="5" />
                <Setter Property="Background" Value="Transparent" />
            </Style>

            <Style x:Key="NarrowListText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="20,0,10,0" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style
                x:Key="IconStyle"
                BasedOn="{StaticResource NarrowStyleIcon}"
                TargetType="Button">
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <Style x:Key="NarrowMenuText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="0,0,0,0" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>


            <Style x:Key="ButtonTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black" />
            </Style>

        </ResourceDictionary>

    </Page.Resources>


    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Rectangle Grid.ColumnSpan="2" Fill="{ThemeResource AcrylicBrush2}" />
        <Rectangle
            Grid.ColumnSpan="2"
            Fill="{ThemeResource GridBackGroundColor}"
            Opacity="0.5" />

        <Grid x:ConnectionId='2' Name="MenuGrid" Width="250">
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Image x:ConnectionId='5'
                Name="LogoImage"
                Grid.Row="0"
                Width="180"
                Height="60"
                RelativePanel.AlignTopWithPanel="True"
                Source="ms-appx:///Assets/zb1.png" />

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />

                    </Grid.RowDefinitions>
                    <!--
                        E825 Bank,  E71C Filter, E8AB Switch , E8d4 Profile , E910 Accounts , E946 info, E9BB Dolar , EA4A Profile ,EC25 personal folder (accounts) ,
                        EF58 account settings , E971 Up arrow , E972 down arrow , E935 flick up ,E936 Flick down , E779 contact info , E77B contact
                    -->
                    <StackPanel>

                        <Button x:ConnectionId='17'
                            Name="DashboardButton"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                                                         
                            FontSize="16"
                            Style="{ThemeResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="8"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontWeight="Bold"
                                    Text="&#xE10F;" />
                                <TextBlock
                                    Margin="5"
                                    FontSize="16"
                                    Text="Dashboard" />

                            </StackPanel>
                        </Button>


                        <Button x:ConnectionId='18'
                            Name="MoneyTransferButton"
                            Padding="5"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                                                             
                            FontSize="16"
                            Style="{ThemeResource MenuButtonStyle}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Margin="0,8"
                                    HorizontalAlignment="Center"
                                    FontFamily="Arial"
                                    Text="&#x20B9;" />
                                <TextBlock
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Margin="0,5"
                                    Text="Money Transfer" />
                                <TextBlock x:ConnectionId='47'
                                    Name="Downarrow1"
                                    Grid.Column="3"
                                    Margin="10"
                                    FontFamily="Segoe MDL2 Assets"
                                    Text="&#xE972;" />

                            </Grid>

                            <!--  Money Transfer  -->
                        </Button>

                        <ListView x:ConnectionId='19'
                            Name="MoneyTransferList"
                            Margin="0,0,0,10"
                            Background="Transparent"
                                                                                 
                            SelectionMode="Single"
                            Visibility="Collapsed">

                            <ListViewItem x:ConnectionId='39' Name="SelfTransfer">
                                <TextBlock x:ConnectionId='44'
                                    Name="SelfTransferTextBlock"
                                    Style="{StaticResource NarrowListText}"
                                    Text="Self" />
                            </ListViewItem>

                            <ListViewItem x:ConnectionId='40' Name="OtherCustomer ">
                                <TextBlock x:ConnectionId='43'
                                    Name="OtherCustomerTransferTextBlock"
                                    Style="{StaticResource NarrowListText}"
                                    Text="Other Customer " />
                            </ListViewItem>

                            <ListViewItem x:ConnectionId='41' Name="OtherBank">
                                <TextBlock x:ConnectionId='42'
                                    Name="OtherBankTransferTextBlock"
                                    Style="{StaticResource NarrowListText}"
                                    Text="Other Bank" />
                            </ListViewItem>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ListViewItemPresenter
                                                    PointerOverBackground="LightGray"
                                                    PressedBackground="LightGray"
                                                    SelectedBackground="{StaticResource ThemeColor}"
                                                    SelectedPointerOverBackground="{StaticResource ThemeColor}"
                                                    SelectedPressedBackground="{StaticResource ThemeColor}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>

                        </ListView>

                        <Button x:ConnectionId='20'
                            Name="AccountsButton"
                            Padding="5"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                                                        
                            FontSize="16"
                            Style="{ThemeResource MenuButtonStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Margin="0,8"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    Text="&#xEC25;" />
                                <TextBlock
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Margin="0,5"
                                    Text="Accounts" />
                                <TextBlock x:ConnectionId='38'
                                    Name="Downarrow2"
                                    Grid.Column="3"
                                    Margin="10"
                                    FontFamily="Segoe MDL2 Assets"
                                    Text="&#xE972;" />

                            </Grid>
                        </Button>
                        <ListView x:ConnectionId='21'
                            Name="AccountsList"
                            Margin="0,0,0,10"
                            Background="Transparent"
                                                                            
                            SelectionMode="Single"
                            Visibility="Collapsed">

                            <ListViewItem x:ConnectionId='32' Name="ViewAccount">
                                <TextBlock x:ConnectionId='35'
                                    Name="ViewAccountTextBlock"
                                    Style="{StaticResource NarrowListText}"
                                    Text="View Account Details" />
                            </ListViewItem>

                            <ListViewItem x:ConnectionId='33' Name="ViewTransaction">
                                <TextBlock x:ConnectionId='34'
                                    Name="ViewTransactionTextBlock"
                                    Style="{StaticResource NarrowListText}"
                                    Text="View Transaction " />
                            </ListViewItem>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ListViewItemPresenter
                                                    PointerOverBackground="LightGray"
                                                    PressedBackground="LightGray"
                                                    SelectedBackground="{StaticResource ThemeColor}"
                                                    SelectedPointerOverBackground="{StaticResource ThemeColor}"
                                                    SelectedPressedBackground="{StaticResource ThemeColor}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>

                        </ListView>


                        <Button x:ConnectionId='22'
                            Name="ProfileButton"
                            Padding="5"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                                                       
                            FontSize="16"
                            Style="{ThemeResource MenuButtonStyle}">


                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Margin="0,10"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    Text="&#xEA4A;" />
                                <TextBlock
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Margin="0,5"
                                    Text="Profile" />
                                <TextBlock x:ConnectionId='31'
                                    Name="Downarrow3"
                                    Grid.Column="3"
                                    Margin="10"
                                    FontFamily="Segoe MDL2 Assets"
                                    Text="&#xE972;" />
                            </Grid>

                            <!--  Profile Settings  -->

                        </Button>
                        <ListView x:ConnectionId='23'
                            Name="ProfileList"
                            Margin="0,0,0,10"
                            Background="Transparent"
                                                                           
                            SelectionMode="Single"
                            Visibility="Collapsed">

                            <ListViewItem x:ConnectionId='25' Name="ViewProfile">
                                <TextBlock x:ConnectionId='28'
                                    Name="ViewProfileTextBlock"
                                    Style="{StaticResource NarrowListText}"
                                    Text="View Profile" />
                            </ListViewItem>

                            <ListViewItem x:ConnectionId='26' Name="EditProfile">
                                <TextBlock x:ConnectionId='27'
                                    Name="EditProfileTextBlock"
                                    Style="{StaticResource NarrowListText}"
                                    Text="Edit Profile" />
                            </ListViewItem>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ListViewItemPresenter
                                                    PointerOverBackground="LightGray"
                                                    PressedBackground="LightGray"
                                                    SelectedBackground="{StaticResource ThemeColor}"
                                                    SelectedPointerOverBackground="{StaticResource ThemeColor}"
                                                    SelectedPressedBackground="{StaticResource ThemeColor}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>


                        <Button x:ConnectionId='24'
                            Name="TransactionsButton"
                            Padding="5"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                                                            
                            FontSize="16"
                            Style="{ThemeResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="10"
                                    FontFamily="Segoe MDL2 Assets"
                                    Text="&#xE8AB;" />
                                <TextBlock Margin="5" Text="Transactions" />

                            </StackPanel>

                            <!--  Transactions Settings  -->
                        </Button>


                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">

                        <Button x:ConnectionId='6'
                            Name="SettingsButton"
                            Margin="10"
                            Padding="5"
                                                        
                            Content="&#xE713;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Style="{ThemeResource IconStyle}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="Settings" Placement="Top" />
                            </ToolTipService.ToolTip>

                            <Button.Flyout>
                                <Flyout x:ConnectionId='10' x:Name="SettingsButtonFlyout">
                                    <ListView x:ConnectionId='11'
                                        Name="ColorsListView"
                                        IsItemClickEnabled="True"
                                                                                          
                                        SelectionMode="Single">

                                        <ListViewItem x:ConnectionId='12' Name="Red">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="5" Text="Red" />
                                                <Ellipse
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5"
                                                    Fill="Red" />
                                            </StackPanel>
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='13' Name="Green">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="5" Text="Green" />
                                                <Ellipse
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5"
                                                    Fill="Green" />
                                            </StackPanel>
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='14' Name="Blue">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="5" Text="Blue" />
                                                <Ellipse
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5"
                                                    Fill="Blue" />
                                            </StackPanel>
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='15' Name="Pink">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="5" Text="Pink" />
                                                <Ellipse
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5"
                                                    Fill="HotPink" />
                                            </StackPanel>
                                        </ListViewItem>

                                        <ListViewItem x:ConnectionId='16' Name="Yellow">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="5" Text="Yellow" />
                                                <Ellipse
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5"
                                                    Fill="GreenYellow" />
                                            </StackPanel>
                                        </ListViewItem>

                                    </ListView>
                                </Flyout>
                            </Button.Flyout>

                        </Button>

                        <Button x:ConnectionId='7'
                            Name="InfoButton"
                            Margin="10"
                            Padding="5"
                                                    
                            Content="&#xE946;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Style="{StaticResource IconStyle}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="About Us" Placement="Top" />
                            </ToolTipService.ToolTip>
                        </Button>

                        <Button x:ConnectionId='8'
                            Name="LogoutButton"
                            Margin="10"
                            Padding="5"
                                                      
                            Content="&#xF3B1;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Style="{StaticResource ExitButtonStyle}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="Logout" Placement="Top" />
                            </ToolTipService.ToolTip>
                        </Button>

                        <Button x:ConnectionId='9'
                            Name="ThemeButton"
                            Margin="10"
                            Padding="5"
                                                     
                            Content="&#xE706;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Style="{StaticResource IconStyle}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="Theme" Placement="Top" />
                            </ToolTipService.ToolTip>
                        </Button>

                    </StackPanel>

                    <!--<StackPanel>
                        <ListView>

                            <ListViewItem>

                            </ListViewItem>

                            <ListViewItem>

                            </ListViewItem>

                            <ListViewItem>

                            </ListViewItem>

                            <ListViewItem>

                            </ListViewItem>

                            <ListViewItem>

                            </ListViewItem>

                            <ListViewItem>

                            </ListViewItem>

                        </ListView>
                    </StackPanel>-->


                </Grid>

            </ScrollViewer>

            <!--<Frame  Grid.RowSpan="2" Name="ContentFrame"></Frame>-->
        </Grid>

