<Page x:ConnectionId='1'
    x:Class="ZBMS.CreateAccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZBMS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Resource/ZBankResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="ComboBox" x:Key="NarrowComboBox" BasedOn="{StaticResource WideStyleComboBox}">

                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>

            <Style TargetType="TextBox" x:Key="NarrowTextBox" BasedOn="{StaticResource WideStyleTextBox}">
                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>

            <Style TargetType="TextBlock" x:Key="NarrowTextBlock" BasedOn="{StaticResource WideStyleTextBlock}">
                <Setter Property="Margin" Value="0,10,0,0"/>

            </Style>
            
            <Style TargetType="Button" x:Key="NarrowPrimaryButton" BasedOn="{StaticResource PrimaryButtonStyle}">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Width" Value="100"></Setter>
           </Style>
            
            <Style TargetType="Button" x:Key="NarrowSecondaryButton" BasedOn="{StaticResource SecondaryButtonStyle}">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Width" Value="100"></Setter>
            </Style>

          
        </ResourceDictionary>
        
    </Page.Resources>

    <ScrollViewer>
        
        <Grid x:ConnectionId='2' Name="MainGrid" Height="500" Width="350" Background="LightSkyBlue" CornerRadius="15">

            <Grid Background="{StaticResource PrimaryBackground}" CornerRadius="15">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock x:ConnectionId='3'  Name="TitleTextBlock"  Text="Create New Account"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="ExtraBold" FontSize="16" Margin="10" ></TextBlock>

                <StackPanel  Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left"  VerticalAlignment="Center"  Margin="60,0,0,0" >
                    <TextBlock x:ConnectionId='17' Name="AccountTypeTextBlock" 
                               Text="Source Account :"
                                Style="{StaticResource NarrowStyleBoldTextBlock}"
                     />

                    <ComboBox x:ConnectionId='18'  Name="AccountTypeComboBox"
                              
                               PlaceholderText="Select account type"
                               Style="{StaticResource NarrowComboBox}" 
                                                                    
                                                                                        
                    ></ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left"  VerticalAlignment="Center"  Margin="60,0,0,0" >
                    <TextBlock x:ConnectionId='15' Name="BranchCodeTextBlock" 
                               Text="Branch Code :"
                                Style="{StaticResource NarrowStyleBoldTextBlock}"
                     />
                   <ComboBox x:ConnectionId='16' Name="BranchCodeComboBox"
                            
                             PlaceholderText="Select branch code" 
                             Style="{StaticResource NarrowComboBox}" 
                                                               
                             RenderTransformOrigin="0.488,0.445" 
                             ></ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Left"  VerticalAlignment="Center"  Margin="60,0,0,0" >
                    <TextBlock x:ConnectionId='13' Name="AmountTextBlock"
                               Text="Initial Amount :"
                              Style="{StaticResource NarrowStyleBoldTextBlock}"
                               
                               ></TextBlock>
                    <TextBox x:ConnectionId='14' Name="AmountTextBox" PlaceholderText="Enter initial amount" Style="{StaticResource NarrowTextBox}" HorizontalAlignment="Left" Background="White" ></TextBox>

                </StackPanel>

                <StackPanel x:ConnectionId='4' Name="TenurePanel" Grid.Row="4" Visibility="Collapsed"  Orientation="Vertical" HorizontalAlignment="Left"  VerticalAlignment="Center"  Margin="60,0,0,0" >

                    <TextBlock x:ConnectionId='11' Name="TenureTextBlock" 
                               Text="Tenure :"
                                Style="{StaticResource NarrowStyleTextBlock}"
                     />

                    <ComboBox x:ConnectionId='12' Name="TenureComboBox"
                              Margin="0,10,0,0"
                              Style="{StaticResource NarrowComboBox}" 
                              PlaceholderText="Select Tenure "
                                                           
                    ></ComboBox>
                    
                </StackPanel>

                <StackPanel x:ConnectionId='5' Name="SavingsAccountPanel" Grid.Row="5" Visibility="Collapsed"  Orientation="Vertical" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="60,20,0,0" >

                    <TextBlock x:ConnectionId='9' Name="SavingsAccountTextBlock" 
                               Text="Savings Account :"
                                Style="{StaticResource NarrowStyleTextBlock}"
                     />

                    <ComboBox x:ConnectionId='10' Name="SavingAccountComboBox"
                              Margin="0,10,0,0"
                              Style="{StaticResource NarrowComboBox}"
                              PlaceholderText="Select SavingsAccount"
                                                                    
                              ></ComboBox>

                </StackPanel>
                
                <TextBlock x:ConnectionId='6' Name="ErrorMessage" 
                           Grid.Row="6"
                           Margin="60,20"
                           Style="{StaticResource ErrorMessageStyle}"
                ></TextBlock>

                

                <Grid Grid.Row="7" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                      
                        
                    </Grid.ColumnDefinitions>

                    <Button x:ConnectionId='7' Name="CreateButton"
                            Content="Create"
                                                       
                            Style="{StaticResource NarrowPrimaryButton}"
                           >
                       
                    </Button>
                    
                    <Button x:ConnectionId='8' Name="CancelButton"
                            Grid.Column="1"
                            Content="Cancel" 
                                                      
                            Width="100"
                            Style="{StaticResource NarrowSecondaryButton}"
                            >
                        
                    </Button>

                    
                </Grid>

            </Grid>
        </Grid>
    </ScrollViewer>
</Page>

