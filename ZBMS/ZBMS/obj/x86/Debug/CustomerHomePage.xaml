<Page x:ConnectionId='1'
    x:Class="ZBMS.CustomerHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZBMS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="30">
       
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='2' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="ContentImage.Width" Value="300"/>
                        <Setter Target="ContentTextBlock.FontSize" Value="16"/>

                    </VisualState.Setters>

                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        

        <GridView x:ConnectionId='3' Name="ShortcutGrids"                                  IsItemClickEnabled="True"                                    >
            <GridView.ItemTemplate>
                <DataTemplate                                     >
                   
                        <StackPanel x:ConnectionId='5' Margin="20" Orientation="Vertical">
                        <TextBlock x:ConnectionId='6' 
                                Name="ContentTextBlock" 
                                                        
                                FontWeight="Bold" 
                                FontSize="12" 
                                HorizontalAlignment="Center" 
                                Margin="10"/>

                        <Image x:ConnectionId='7'
                            Name="ContentImage" 
                                                            
                            Stretch="Uniform" 
                            Width="150"/>
                    </StackPanel>
                        
                   
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
   

    </Grid>
</Page>

