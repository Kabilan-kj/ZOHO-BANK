<Page
    x:Class="ZBMS.MainFramePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZBMS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:ConnectionId='2' TargetType="TextBlock" x:Name="CharacterWideTextBlock">
            <Setter Property="Height" Value="40"></Setter>
            <Setter Property="Width" Value="40"></Setter>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" ></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="0,10,10,0"></Setter>
            <Setter Property="FontSize" Value="28"></Setter>
        </Style>
        
        <Style x:ConnectionId='3' TargetType="TextBlock" x:Name="CharacterNarrowTextBlock">
            <Setter Property="Height" Value="20"></Setter>
            <Setter Property="Width" Value="20"></Setter>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" ></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="0,5,5,0"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
        </Style>

        <Style x:ConnectionId='4' TargetType="Button" x:Name="WideHeaderButton">
            <Setter Property="Height" Value="40"></Setter>
            <Setter Property="Width" Value="40"></Setter>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" ></Setter>
            <Setter Property="Foreground" Value="DeepSkyBlue"></Setter>
            <Setter Property="Background" Value="White"></Setter>
            <Setter Property="Margin" Value="20"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>

        <Style x:ConnectionId='5' TargetType="Button" x:Name="NarrowHeaderButton">
            <Setter Property="Height" Value="20"></Setter>
            <Setter Property="Width" Value="20"></Setter>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" ></Setter>
            <Setter Property="Foreground" Value="DeepSkyBlue"></Setter>
            <Setter Property="Background" Value="White"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>

        <Style x:ConnectionId='6' TargetType="TextBlock" x:Name="ListContentWideTextBlock">
            <Setter Property="FontSize" Value="28"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>

        <Style x:ConnectionId='7' TargetType="TextBlock" x:Name="ListContentNarrowTextBlock">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>

        <SolidColorBrush Color="Black" x:Key="DarkBrush1"></SolidColorBrush>
        <SolidColorBrush Color="White" x:Key="DarkBrush2"></SolidColorBrush>
        <SolidColorBrush Color="Gray" x:Key="DarkBrush3"></SolidColorBrush>

        <SolidColorBrush Color="White" x:Key="LightBrush1"></SolidColorBrush>
        <SolidColorBrush Color="DeepSkyBlue" x:Key="LightBrush2"></SolidColorBrush>
        <SolidColorBrush Color="LightSkyBlue" x:Key="LightBrush3"></SolidColorBrush>

    </Page.Resources>
    
    <Grid Background="DeepSkyBlue">


        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='8' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        
                        <Setter Target="HamburgerButton.Style" Value="{StaticResource WideHeaderButton }"/>
                        <Setter Target="ProfileButton.Style" Value= "{StaticResource WideHeaderButton}"/>
                        <Setter Target="ForwardButton.Style" Value="{StaticResource WideHeaderButton}"/>
                        <Setter Target="BackwardButton.Style" Value="{StaticResource WideHeaderButton}"/>

                        <Setter Target="MoneyTransferCharacter.Style" Value="{StaticResource CharacterWideTextBlock}"/>
                        <Setter Target="ProfileSettingsCharacter.Style" Value="{StaticResource CharacterWideTextBlock}"/>
                        <Setter Target="AccountSettingsCharacter.Style" Value="{StaticResource CharacterWideTextBlock}"/>
                        <Setter Target="AboutUsCharacter.Style" Value="{StaticResource CharacterWideTextBlock}"/>
                        <Setter Target="SignOutCharacter.Style" Value="{StaticResource CharacterWideTextBlock}"/>

                        <Setter Target="MoneyTransferTextBlock.Style" Value="{StaticResource ListContentWideTextBlock}"/>
                        <Setter Target="ProfileSettingsTextBlock.Style" Value="{StaticResource ListContentWideTextBlock}"/>
                        <Setter Target="AccountSettingsTextBlock.Style" Value="{StaticResource ListContentWideTextBlock}"/>
                        <Setter Target="AboutUsTextBlock.Style" Value="{StaticResource ListContentWideTextBlock}"/>
                        <Setter Target="SignOutTextBlock.Style" Value="{StaticResource ListContentWideTextBlock}"/>

                        <Setter Target="MenuSplitView.CompactPaneLength" Value="70"/>
                        <Setter Target="MenuSplitView.OpenPaneLength" Value="350"/>
                        <Setter Target="MenuSplitView.DisplayMode" Value="CompactInline"/>

                    </VisualState.Setters>

                </VisualState>

                <VisualState x:ConnectionId='9' x:Name="WideState2">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="700"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="HamburgerButton.Style" Value="{StaticResource WideHeaderButton }"/>
                        <Setter Target="ProfileButton.Style" Value= "{StaticResource WideHeaderButton}"/>
                        <Setter Target="ForwardButton.Style" Value="{StaticResource WideHeaderButton}"/>
                        <Setter Target="BackwardButton.Style" Value="{StaticResource WideHeaderButton}"/>

                        <Setter Target="MoneyTransferCharacter.Style" Value="{StaticResource CharacterWideTextBlock}"/>
                        <Setter Target="ProfileSettingsCharacter.Style" Value="{StaticResource CharacterWideTextBlock}"/>
                        <Setter Target="AccountSettingsCharacter.Style" Value="{StaticResource CharacterWideTextBlock}"/>
                        <Setter Target="AboutUsCharacter.Style" Value="{StaticResource CharacterWideTextBlock}"/>
                        <Setter Target="SignOutCharacter.Style" Value="{StaticResource CharacterWideTextBlock}"/>

                        <Setter Target="MoneyTransferTextBlock.Style" Value="{StaticResource ListContentWideTextBlock}"/>
                        <Setter Target="ProfileSettingsTextBlock.Style" Value="{StaticResource ListContentWideTextBlock}"/>
                        <Setter Target="AccountSettingsTextBlock.Style" Value="{StaticResource ListContentWideTextBlock}"/>
                        <Setter Target="AboutUsTextBlock.Style" Value="{StaticResource ListContentWideTextBlock}"/>
                        <Setter Target="SignOutTextBlock.Style" Value="{StaticResource ListContentWideTextBlock}"/>

                        <Setter Target="MenuSplitView.CompactPaneLength" Value="70"/>
                        <Setter Target="MenuSplitView.OpenPaneLength" Value="350"/>
                        <Setter Target="MenuSplitView.DisplayMode" Value="CompactInline"/>

                    </VisualState.Setters>

                </VisualState>




            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Background="LightSkyBlue" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
           
            <Button x:ConnectionId='23'  
                Name="HamburgerButton"  
                                             
                Content="&#xE700;"
                Style="{StaticResource NarrowHeaderButton}"
                 Padding="0"
                />

            <RelativePanel  Grid.Column="1" >
                <TextBlock x:ConnectionId='28' 
                    Name="TitleBLock"  
                    Foreground="White" 
                    Text="DashBoard" 
                    FontSize="36" 
                    Margin="60,20,20,20" 
                    RelativePanel.RightOf="ForwardButton"
                     HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    />

                <Button x:ConnectionId='29' Name="ForwardButton" Style="{StaticResource NarrowHeaderButton}"                             Content="&#xE26B;"  Margin="100,20,20,20"  HorizontalAlignment="Center" VerticalAlignment="Center" >
                    
                </Button>
                <Button x:ConnectionId='30' Name="BackwardButton" Style="{StaticResource NarrowHeaderButton}"                              Content="&#xE26C;" RelativePanel.AlignLeftWithPanel="True" Margin="20,20,20,20"  HorizontalAlignment="Center" VerticalAlignment="Center"  >
                    
                </Button>
               
                
            </RelativePanel>
            <Image Grid.Column="2" Source="Assets/zb1.png" Height="50" Width="200" ></Image>

            <Button x:ConnectionId='24' 
                Name="ProfileButton"
                Content="&#xE13D;"
                Style="{StaticResource NarrowHeaderButton}"
                Grid.Column="3"
                Padding="0"
                >

                <Button.Flyout>
                    <Flyout x:ConnectionId='25' x:Name="MoreOptions">
                        <StackPanel Background="LightSkyBlue" Orientation="Vertical" >

                           <Image Source="Assets/ProfileImage1.jpg" Margin="0,0,0,10"  Stretch="Uniform" Width="100"></Image>
                            <Button x:ConnectionId='26' Name="ViewProfileButton" Content="View Profile" FontSize="14"                                 Foreground="White" Background="LightSkyBlue" HorizontalAlignment="Center" Margin="0,0,0,10"></Button>
                            <Button Content="Edit Profile" FontSize="14" Foreground="White" Background="LightSkyBlue" HorizontalAlignment="Center" Margin="0,0,0,30"></Button>
                            <HyperlinkButton x:ConnectionId='27' Content="Sign Out"                               FontSize="14" Foreground="IndianRed" HorizontalAlignment="Center" Margin="0,0,0,10"></HyperlinkButton>


                        </StackPanel>
                    </Flyout>
                </Button.Flyout>

            </Button>

        </Grid>

            
            <SplitView x:ConnectionId='10' 
                Grid.Row="1" 
                DisplayMode="Inline" 
                CompactPaneLength="50" 
                OpenPaneLength="250" 
                Background="White" 
                Name="MenuSplitView" >

                <SplitView.Pane>

                    <ListBox 
                        Background="LightSkyBlue"
                        Foreground="White" 
                        SelectionMode="Single">

                        <ListBoxItem
                            Margin="10">
                            <StackPanel 
                                Orientation="Horizontal">

                                <TextBlock x:ConnectionId='20' 
                                    Name="MoneyTransferCharacter"
                                    Style="{StaticResource CharacterNarrowTextBlock}"
                                    Text="&#xE117;" 
                                     />

                                <TextBlock x:ConnectionId='21' 
                                    Name="MoneyTransferTextBlock"
                                    Text="Money Transfer" 
                                    Style="{StaticResource ListContentNarrowTextBlock}" />

                            <Button  FontFamily="Segoe MDL2 Assets" Margin="10,10,0,0" FontSize="14"  Content="&#xE013;" Foreground="White" Background="LightSkyBlue"   >
                                <Button.Flyout>
                                    <Flyout Placement="Right"  >
                                        <StackPanel Background="LightSkyBlue" >
                                            <!--<TextBlock Text="UnderDevelopment" FontSize="14" Foreground="White">

                                            </TextBlock>-->
                                            <ListBox Background="LightSkyBlue">
                                                <ListBoxItem>
                                                    <Button Content="Self Transfer" FontSize="14" Foreground="White" Background="LightSkyBlue"></Button>
                                                    <!--<TextBlock Text="Self Transfer" FontSize="14" Foreground="White" ></TextBlock>-->
                                                </ListBoxItem>
                                                <ListBoxItem>

                                                    <!--<TextBlock Text="Other Customer" FontSize="14" Foreground="White" ></TextBlock>-->
                                                    <Button Content="Other Customer" FontSize="14" Foreground="White" Background="LightSkyBlue"></Button>
                                                </ListBoxItem>
                                                <ListBoxItem>
                                                    <TextBlock Text="Other Bank Customer" FontSize="14" Foreground="White" ></TextBlock>
                                                    <!--<Button Content="Other Bank Customer" FontSize="14" Foreground="White" Background="LightSkyBlue"></Button>-->
                                                </ListBoxItem>
                                            </ListBox>
                                            
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>

                            </Button>

                        </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:ConnectionId='18' 
                                    Name="ProfileSettingsCharacter"
                                    Style="{StaticResource CharacterNarrowTextBlock}"
                                    Text="&#xE13D;" 
                                     />

                                <TextBlock x:ConnectionId='19'
                                    Name="ProfileSettingsTextBlock"
                                    Text="Profile Settings " 
                                    Style="{StaticResource ListContentNarrowTextBlock}" />

                            <Button  FontFamily="Segoe MDL2 Assets" FontSize="14"  Margin="10,10,0,0" Content="&#xE013;" Foreground="White" Background="LightSkyBlue"    >
                                    <Button.Flyout>
                                        <Flyout>
                                        <StackPanel Background="LightSkyBlue" >
                                            <!--<TextBlock Text="UnderDevelopment" FontSize="14" Foreground="White">

                                            </TextBlock>-->
                                            <ListBox Background="LightSkyBlue">
                                                <ListBoxItem>
                                                    <Button Content="View Profile" FontSize="14" Foreground="White" Background="LightSkyBlue"></Button>
                                                    <!--<TextBlock Text="Self Transfer" FontSize="14" Foreground="White" ></TextBlock>-->
                                                </ListBoxItem>
                                                <ListBoxItem>

                                                    <!--<TextBlock Text="Other Customer" FontSize="14" Foreground="White" ></TextBlock>-->
                                                    <Button Content="Edit Profile" FontSize="14" Foreground="White" Background="LightSkyBlue"></Button>
                                                </ListBoxItem>
                                                
                                            </ListBox>

                                        </StackPanel>
                                    </Flyout>
                                    </Button.Flyout>
                                
                                    </Button>


                        </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:ConnectionId='16' 
                                    Name="AccountSettingsCharacter"
                                    Style="{StaticResource CharacterNarrowTextBlock}"
                                    Text="&#xE15E;" 
                                    />

                                <TextBlock x:ConnectionId='17'  
                                    Name="AccountSettingsTextBlock"
                                    Text="Account Settings" 
                                    Style="{StaticResource ListContentNarrowTextBlock}" />

                            <Button  FontFamily="Segoe MDL2 Assets"  Margin="10,10,0,0" FontSize="14"  Content="&#xE013;" Foreground="White" Background="LightSkyBlue"  >
                                <Button.Flyout>
                                    <Flyout>
                                        <StackPanel >
                                            <TextBlock Text="UnderDevelopment" FontSize="14" Foreground="White">

                                            </TextBlock>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>

                            </Button>

                        </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:ConnectionId='14' 
                                    Name="AboutUsCharacter"
                                    Style="{StaticResource CharacterNarrowTextBlock}"
                                    Text="&#xE160;"
                                     />

                                <TextBlock x:ConnectionId='15' 
                                    Name="AboutUsTextBlock"
                                    Text="About Us" 
                                    Style="{StaticResource ListContentNarrowTextBlock}" />

                            <Button  FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="10,10,0,0" Content="&#xE013;" Foreground="White" Background="LightSkyBlue"   >
                                <Button.Flyout>
                                    <Flyout>
                                        <StackPanel >
                                            <TextBlock Text="UnderDevelopment" FontSize="14" >

                                            </TextBlock>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>

                            </Button>

                        </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:ConnectionId='12' 
                                    Name="SignOutCharacter"
                                   Style="{StaticResource CharacterNarrowTextBlock}"
                                    Text="&#xE111;" 
                                    />

                                <TextBlock x:ConnectionId='13' 
                                    Name="SignOutTextBlock"
                                    Text="SignOut" 
                                    Style="{StaticResource ListContentNarrowTextBlock}" />
                                
                                

                            </StackPanel>
                        </ListBoxItem>

                    </ListBox>
                
                </SplitView.Pane>
                <SplitView.Content>
                    <Frame x:ConnectionId='22' Name="HomePageFrame"></Frame>
                </SplitView.Content>
               
            </SplitView>

        <Frame x:ConnectionId='11' Name="FullFrame" Grid.RowSpan="2" ></Frame>
        
        
    </Grid>
</Page>

