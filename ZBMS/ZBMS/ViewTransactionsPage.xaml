                </StackPanel>


                <StackPanel Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Reference ID" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="40,10"></TextBlock>
                    <TextBlock Name="TransactionIdTextBlock" Text="Kabilan"  HorizontalAlignment="Center" ></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Remarks" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="40,10"></TextBlock>
                    <TextBlock Text="Kabilan"  HorizontalAlignment="Center" ></TextBlock>
                </StackPanel>

            </Grid>


