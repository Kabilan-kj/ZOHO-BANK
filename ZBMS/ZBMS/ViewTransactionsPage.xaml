            <Grid Name="DetailedTransactionGrid" x:DeferLoadStrategy="Lazy" Grid.Column="1"  BorderThickness="1" Height="700" Width="350" Margin="20" Background="LightGreen" CornerRadius="10" BorderBrush="Black" >
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                </Grid.RowDefinitions>

                <RelativePanel Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" >
                    <Button  Name="CloseButton" Click="CloseButton_Click" FontFamily="Segoe MDL2 Assets" Content="&#xE10A;" FontWeight="Bold" Foreground="Red" Background="Transparent"  RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWithPanel="True" ></Button>
                    <TextBlock Name="DateTextBlock" Text="Date" Margin="20,10" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                        
                    </TextBlock>
                    <TextBlock Name="TimeTextBlock" Text="Time"  Margin="40,10" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" HorizontalAlignment="Right" VerticalAlignment="Center">
                        
                    </TextBlock>
                </RelativePanel>

                <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Sent By" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="40,10"></TextBlock>
                    <TextBlock Name="SenderNameTextBlock" Text="Kabilan"  HorizontalAlignment="Center" ></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Received By:" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="40,10"></TextBlock>
                    <TextBlock Name="ReceiverNameTextBlock" Text="Kabilan"  HorizontalAlignment="Center" ></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Amount:" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="40,10"></TextBlock>
                    <TextBlock Name="TransactionAmountTextBlock" Text="Kabilan"  HorizontalAlignment="Center" ></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Status" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="40,10"></TextBlock>
